default: &default
  username: <%= ENV['PGUSER'] %>
  password: <%= ENV['PGPASSWORD'] %>
  host: <%= ENV['PGHOST'] %>
  port: <%= ENV['PGPORT'] %>
  adapter: postgresql
  pool: 5

development:
  <<: *default
  database: hin_dev
  timeout: 5000

test:
  <<: *default
  database: hin_test
  timeout: 5000

production:
  <<: *default
  database: hin_production
